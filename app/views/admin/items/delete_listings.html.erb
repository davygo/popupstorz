<div id="get-list-header">
  <h2>All Items</h2>
</div>
<div class="listx-bg">
  <% unless @items.blank? %>
    <% @items.each do | item | %>
      <div class="listx" style="margin-bottom: 10px;border-bottom: 1px solid gray;padding: 10px;">
        <div class="imgx">
          <% if item.avatars.size > 0 %>
            <%= image_tag(item.avatars.first.photo.url(:thumb), :width => "115", :height => "81", :alt => "Space-Photo")  %>
          <% else %>
            NO IMAGE PROVIDED YET.
          <% end %>
        </div>

        <div class="name-list"><%= item.title %></div>
        <div class="manage-bg">
          <div class="btns">
            <%= link_to "Destroy" , admin_item_path(item), :method => :delete, :confirm => "Are you sure you want to destroy this listing?" %>|&nbsp;
          </div>
        </div>
      </div>
    <%end%>
  <%else%>
    No Items listed with PopUpStorz
  <%end%>
</div>

<div class="btn-bar">

</div>
