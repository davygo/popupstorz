<h2>Sign up</h2>
<h4> Your "e-mail" and "mobile phone" are necessary to contact you <br/>
  if there is any problem during the rental. They will not be shown <br/>
  on the website, except to people with whom you have confirmed transactions.</h4>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %><br />
    <%= f.text_field :first_name %>(required)</div>

  <div><%= f.label :last_name %><br />
    <%= f.text_field :last_name %>(required)</div>

  <div><%= f.label :email %><br />
    <%= f.email_field :email %>(required)</div>

  <div><%= f.label :verify_email %><br />
    <%= f.email_field :verify_email %>(required)</div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password %>(required)</div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :security_question %><br />
    <%= f.text_field :security_question %>(required)</div>

  <div><%= f.label :security_answer %><br />
    <%= f.text_field :security_answer %>(required)</div>

  <div><%= f.label :mobile_phone %><br />
    <%= f.text_field :mobile_phone %>(required)</div>

  <div><%= f.label :Address1 %><br />
    <%= f.text_field :address1 %>(required)</div>

  <div><%= f.label :Address2 %> <br />
    <%= f.text_field :address2 %></div>

  <div><%= f.label :ZipCode %>
    <%= f.text_field :zip_code, :size => "5" %></div>
  <br />
  <div><%= f.label :city %>
    <%= f.text_field :city, :size => "20" %>(required)</div>
  <br />
  <div><%= f.label :country %>
    <%= f.text_field :country, :size => "20" %>(required)</div>
  <br />
  <div><%= f.label :gender %>
    <%= f.select :gender, options_for_select(['Male', 'Female'])%>(required, but will not be shown)</div><br/>

  <div><%= f.label :date_of_birth %>
    <%=  f.text_field :date_of_birth %>(required, but will not be shown)</div><br/>

  <div><%= f.label :description %><br />
    <%= f.text_area :description, :size => "40x4" %></div><br/>

  <div><%= f.label :activity %><br />
    <%= f.text_field :activity %></div><br/>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>





<script type="text/javascript">

  $('#user_date_of_birth').datepick({ dateFormat: 'yyyy-mm-dd', yearRange: 'any',  showTrigger: '#calImg'});

</script>