<div class="leftcontent">
  <div class="shadowCont" style="float: left;">
    <div class="s_head">Sign Up</div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="reqInfo">Required information</div>
      <div class="newPaperclipFiles" style="margin-left: 128px;">
        Upload Profile Pictures:<br/>
        <%(1 - resource.avatars.size).times { resource.avatars.build }%>

        <%= f.fields_for :avatars do |avatar| %>
          <% if avatar.object.new_record? %>
            <%= avatar.file_field :photo %>
          <% end %>

        <% end %>
      </div>

      <div class="sign_up_input">
        <label>First Name</label>
        <%= f.text_field :first_name, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Last Name</label>
        <%= f.text_field :last_name , :autocomplete=> "off"%>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Date of Birth</label>
        <%=  f.text_field :date_of_birth, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Gender</label>
        <div class="fltL">
          <div style="float: left;">
            <span>
              <%= f.radio_button :gender,   true, :style => "margin-top: 2px;" %>
            </span>
            <span style="margin-left: 5px;">Male</span>
          </div>
          <div style="float: left;margin-left: 10px;">
            <span>
              <%= f.radio_button :gender, false , :style => "margin-top: 2px;" %>
            </span>
            <span style="margin-left: 5px;">Female</span>
          </div>
        </div>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
      <div class="sign_up_input">
        <label>Email</label>
        <%= f.email_field :email, :autocomplete=> "off" %>
  <%#*<div class="clear"></div>%>
      </div>
      <div class="sign_up_input">
        <label>Verify Email</label>
        <%= f.email_field :verify_email, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>

      <div class="sign_up_input">
        <label>Password</label>
        <%= f.password_field :password , :autocomplete=> "off"%>
  <%#*<div class="clear"></div>%>
      </div>
      <div class="sign_up_input fltL">
        <label>Conform Password</label>
        <%= f.password_field :password_confirmation, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>

      <div class="sign_up_input">
        <label>Security Question</label>
        <%= f.text_field :security_question, :autocomplete=> "off" %>
  <%#*<div class="clear"></div>%>
      </div>
      <div class="sign_up_input">
        <label>Security Answer</label>
        <%= f.text_field :security_answer, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
      <div class="sign_up_input">
        <label>Mobile No</label>
        <%= f.text_field :mobile_phone , :autocomplete=> "off"%>
        <div class="clear"></div>
      </div>

      <div class="reqInfo">Optional information</div>
      <div class="sign_up_input">
        <label>Address 1</label>
        <%= f.text_field :address1, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Address 2</label>
        <%= f.text_field :address1, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>City</label>
        <%= f.text_field :city , :autocomplete=> "off"%>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Country</label>
        <%= f.select( :country, options_from_collection_for_select( Country.all, :printable_name, :printable_name), :prompt => "Select Country") %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Zip code</label>
        <%= f.text_field :zip_code, :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Activity</label>
        <%= f.text_field :activity , :autocomplete=> "off"%>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
      <div class="sign_up_input">
        <label>Description</label>
        <%= f.text_area :description, :size => "40x4", :autocomplete=> "off" %>
        <div class="clear"></div>
      </div>

      <%= f.submit "Sign up", :class => "search" %>

    <% end %>
    <br/>
    <div style="float:left;width: 100%;margin-left: 100px;margin-top: 35px;">
      <%= render :partial => "devise/shared/links" %>
    </div>

    <script type='text/javascript'>
      
      $("#user_date_of_birth").datepicker();
      
    </script>
  </div>
</div>