<div class="leftcontent">
  <div class="shadowCont">
    <div class="s_head">Sign Up</div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="reqInfo">Required information</div>
      <div class="sign_up_input">
        <label>First Name</label>
        <%= f.text_field :first_name %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Last Name</label>
        <%= f.text_field :last_name %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Date of Birth</label>
        <%=  f.text_field :date_of_birth %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Gender</label>
        <div class="fltL">
          <%= f.select :gender, options_for_select(['Male', 'Female'])%>(required, but will not be shown)
        </div>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
      <div class="sign_up_input">
        <label>Email</label>
        <%= f.email_field :email %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Verify Email</label>
        <%= f.email_field :verify_email %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>

      <div class="sign_up_input">
        <label>Password</label>
        <%= f.password_field :password %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Conform Password</label>
        <%= f.password_field :password_confirmation %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>

      <div class="sign_up_input">
        <label>Security Question</label>
        <%= f.text_field :security_question %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Security Answer</label>
        <%= f.text_field :security_answer %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
      <div class="sign_up_input">
        <label>Mobile No</label>
        <%= f.text_field :mobile_phone %>
        <div class="clear"></div>
      </div>

      <div class="reqInfo">Optional information</div>
      <div class="sign_up_input">
        <label>Address 1</label>
        <%= f.text_field :address1 %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>Address 2</label>
        <%= f.text_field :address1 %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input">
        <label>City</label>
        <%= f.text_field :city %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Country</label>
        <%= f.text_field :country %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Zip code</label>
        <%= f.text_field :zip_code %>
        <div class="clear"></div>
      </div>
      <div class="sign_up_input fltL">
        <label>Activity</label>
        <%= f.text_field :activity %>
        <div class="clear"></div>
      </div>
  <%#*<div class="sign_up_input fltL">%>
  <%#*<label>Other</label>%>
  <%#*<input type="text" value="Raza" />%>
  <%#*<div class="clear"></div>%>
  <%#*</div>%>
      <div class="clear"></div>
      <div class="sign_up_input">
        <label>Description</label>
        <%= f.text_area :description, :size => "40x4" %>
        <div class="clear"></div>
      </div>
      <%#*<div class="sign_up_input">%>
        <%#*<label>Upload</label>%>
        <%#*<input type="text" value="Raza" />%>
        <%#*<div class="clear"></div>%>
      <%#*</div>%>
      <%= f.submit "Sign up", :class => "search" %>

    <% end %>
    <br/>
    <div style="float:left">
    <%= render :partial => "devise/shared/links" %>
</div>

   <script type="text/javascript">
      $('#user_date_of_birth').datepick({ dateFormat: 'yyyy-mm-dd', yearRange: 'any',  showTrigger: '#calImg'});
    </script>