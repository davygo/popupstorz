<div style="float: left; padding: 10px; border: 1px solid gray;">
  <div>
    <%= link_to "Edit this Item", edit_item_path(@item) if (@item.user.email == current_user.email) %> &nbsp;&nbsp;
    <%= link_to "Delete this Item", item_path(@item), :method => :delete, :confirm => "Are you sure?"  if (@item.user.email == current_user.email)%>
    <span style="float: right;margin-right: 10px;">
      <%= button_to "Book it", "#" unless (@item.user == current_user)%></span>
  </div>
  <br/>
  <div id="get-list-header">
    <div id="lisit-txt"><b>Title: </b><%= @item.title %><br/>
      <span class="hel-14">
        <b>Neighbourhood: </b><%= @item.neighbourhood %><br/>
        <b>City: </b><%= @item.city %><br/>
        <b>Country: </b><%= @item.country_code %>
      </span>
    </div>

    <div>
      <b>Owner: </b><%= @item.user.first_name %> <%= @item.user.last_name %>
    </div>
  </div>
  <br/><br/>
  <div id="left-side">
    <div class="left-gray">
      <div class="existingPaperclipFiles">
        <% @item.avatars.each  do |avatar| %>
          <div class="thumbnail">
            <%= link_to( image_tag(avatar.photo.url(:thumb)), avatar.photo.url(:original) ) %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="left-gray">
      <div id="space-details-txt"><b>Description: </b><%= raw @item.description %></div>
    </div>

  </div>

  <div id="right-widgets">
    <div class="blue-box">
      <div id="price-x"><span class="font-24"><b>Size: </b><%=  @item.size %> <%= @item.size_unit %></span>&nbsp; </div>
    </div>
  </div>

  <div id="right-widgets">
    <div class="blue-box">      
      <div id="price-x"><span class="font-24"><b>Price: </b><%=  @item.price_unit %>&nbsp;<%=  @item.price %></span>&nbsp; <%=  @item.time_for_unit_price %></div>
    </div>
  </div>

  <div id="right-widgets">
    <div class="blue-box">
      <div id="price-x"><span class="font-24"><%=  @item.time_period %></span></div>
    </div>
  </div>


  <div id="right-widgets">
    <div class="blue-box">
      <div id="price-x">
        <span class="font-24">
          <b>From: </b>
          <%=  @item.availability_from.strftime("%d-%m-%Y %I:%M%p") %>&nbsp; <b>To:</b>
          <%=  @item.availability_to.strftime("%d-%m-%Y %I:%M%p") %>
        </span>
      </div>
    </div>
  </div>


</div>